{
	"name": "chat-api",
	"version": "1.4.32",
	"description": "",
	"author": "",
	"private": true,
	"license": "MIT",
	"packageManager": "yarn@1.22.22",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "ENV_PATH=.local.env nest start",
		"start:dev": "ENV_PATH=.local.env nest start --watch",
		"start:debug": "ENV_PATH=.local.env nest start --debug --watch",
		"start:prod": "nest start",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "ENV_PATH=.local.env NODE_ENV=test jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.10",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.3.10",
		"@nestjs/jwt": "^10.0.1",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.3.10",
		"@nestjs/platform-socket.io": "^10.3.10",
		"@nestjs/swagger": "^7.4.0",
		"@nestjs/typeorm": "^10.0.1",
		"@nestjs/websockets": "^10.3.10",
		"bcrypt": "^5.1.0",
		"blurhash": "^2.0.5",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.8.0",
		"postgres": "^3.3.3",
		"reflect-metadata": "^0.2.1",
		"rimraf": "5.0.7",
		"rxjs": "^7.8.1",
		"sharp": "^0.33.4",
		"swagger-ui-express": "^5.0.0",
		"typeorm": "^0.3.11",
		"typevert": "^0.9.11"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.3.1",
		"@nestjs/cli": "^10.4.2",
		"@nestjs/schematics": "^10.1.2",
		"@nestjs/testing": "^10.3.10",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^29.5.11",
		"@types/multer": "^1.4.7",
		"@types/node": "^20.14.9",
		"@types/passport-jwt": "^4.0.0",
		"@types/passport-local": "^1.0.35",
		"@types/sharp": "^0.32.0",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.2",
		"jest": "29.7.0",
		"prettier": "^3.3.2",
		"sqlite3": "^5.0.8",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.5",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"coveragePathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/",
			".*\\.controller\\.ts",
			".*\\.module\\.ts",
			".*\\.strategy\\.ts",
			".*\\.dto\\.ts",
			".*\\.middleware\\.ts",
			".*\\.guard\\.ts",
			".*\\.gateway\\.ts",
			"main\\.ts",
			"utils\\.ts",
			"constants\\.ts"
		],
		"testEnvironment": "node",
		"coverageReporters": [
			"text",
			"html"
		]
	}
}
